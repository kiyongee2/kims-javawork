package lambda.string;

@FunctionalInterface
interface PrintString{
	
	void showString(String str);
}



public class LambdaTest {

	public static void main(String[] args) {
		PrintString lambdaPrint;
		lambdaPrint = (str) -> System.out.println(str);
		lambdaPrint.showString("안녕하세요");
		
		//메서드 호출
		writeString(lambdaPrint);
		
	}
	
	//함수형 인터페이스를 매개변수로 전달
	public static void writeString(PrintString pr) {
		pr.showString("Good Luck!!");
	}
	

}
