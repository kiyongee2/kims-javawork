package dataio.filecopy;

import java.io.FileInputStream;
import java.io.FileOutputStream;
import java.io.IOException;
import java.io.InputStream;
import java.io.OutputStream;

public class FileCopyTest1 {

	public static void main(String[] args) {
		
		String originFile = "c:/file/img1.jpg";
		String copyFile = "c:/file/img2.jpg";
		
		try(InputStream is = new FileInputStream(originFile);
			OutputStream os = new FileOutputStream(copyFile)){
			byte[] data = new byte[1024];  //읽은 바이트를 저장할 배열 생성
			
			while(true) {
				int num = is.read(data);  //최대 1024바이트를 읽고 배열에 저장
				if(num == -1) break;
				os.write(data, 0, num);  //읽은 바이트 수만큼 출력
			}
			os.flush();
			
			System.out.println("복사 완료!");
		}catch(IOException e) {
			e.printStackTrace();
		}
	}
}
